---
import { url } from '../lib/data.js';
import { REPO_NAME } from '../app/constants.js'

import PasswdConfirm from '../vue/components/PasswdConfirm.vue';
---

<div
	class="w-full flex flex-col items-center justify-center px-6 pt-8 mx-auto pt:mt-0 dark:bg-gray-900"
>
	<a
		href="#"
		class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white"
	>
		<img src={url('assets/logo.svg')} alt="FlowBite Logo" class="mr-4 h-11" />
		<span>{REPO_NAME}</span>
	</a>

	<!-- Card -->
	<div
		class="w-full max-w-xl p-6 space-y-8 bg-white rounded-lg shadow sm:p-8 dark:bg-gray-800"
	>
		<h2 class="text-2xl font-bold text-gray-900 dark:text-white">
			重置你的密码
		</h2>
		
			
			<PasswdConfirm client:load url="#" button_text="重置密码"/>

	</div>
	
</div>


